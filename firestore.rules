rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{msgId} {
      allow write: if request.time < timestamp.date(2026, 1, 1); // public can write
      allow read: if request.auth != null
                  && request.auth.token.email == "bouchakoursalim5@gmail.com"; // only your admin email
    }
  }
}
